[req]
prompt                  = no
default_bits            = 2048
default_md              = sha256
req_extensions          = req_ext
distinguished_name      = dn

[dn]
commonName = leaf_cert
countryName = US
organizationName = Org1
organizationalUnitName = OrgUn1

[req_ext]
keyUsage = digitalSignature
extendedKeyUsage = serverAuth
subjectAltName = @alt_names

[alt_names]
IP.1 = 127.0.0.1
DNS.1 = localhost
DNS.2 = someotherhost
DNS.3 = *.some.wildcard.host